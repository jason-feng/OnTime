<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/create_background"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    SETTINGS     "
        android:layout_marginTop="50dip"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="4dip"
            android:background="@color/white">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:paddingLeft="5dp"
                android:text="@string/social_pref"
                android:textStyle="bold"/>

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id= "@+id/listFb"
                android:layout_marginTop="10dip"
                android:drawSelectorOnTop="true"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:paddingLeft="5dp"
                android:text="@string/locations_pref"
                android:textStyle="bold"/>

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id= "@+id/listLoc"
                android:layout_marginTop="10dip"
                android:drawSelectorOnTop="true"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:paddingLeft="5dp"
                android:text="@string/push_pref"
                android:textStyle="bold"/>

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/notify_me"
                android:id="@+id/checkMe" />

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/notify_others"
                android:id="@+id/checkOthers" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_weight="1"
            android:id="@+id/save_button_settings" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_weight="1"
            android:id="@+id/cancel_button_settings" />

    </LinearLayout>

</LinearLayout>
